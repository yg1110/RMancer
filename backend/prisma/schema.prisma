generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismaClassGenerator {
  provider               = "prisma-class-generator"
  dryRun                 = "false"
  separateRelationFields = "false"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime? @map("email_verified")
  hashedPassword String?   @map("hashed_password")
  image          String?

  accounts Account[]
  sessions Session[]
  inbodies InbodyRecord[]
  profile  GoalProfile?

  @@map("users")

}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model InbodyRecord {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")

  measuredAt       DateTime @map("measured_at")
  heightCm         Float    @map("height_cm")
  weightKg         Float    @map("weight_kg")
  skeletalMuscleKg Float    @map("skeletal_muscle_kg")
  bodyFatKg        Float    @map("body_fat_kg")
  bodyFatPct       Float    @map("body_fat_pct")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, measuredAt])
  @@map("inbody_records")
}

enum GoalType {
  MUSCLE_GAIN
  FAT_LOSS
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model GoalProfile {
  id               String          @id @default(cuid())
  userId           String          @unique @map("user_id")
  goalType         GoalType        @map("goal_type")
  experienceLevel  ExperienceLevel @map("experience_level")
  weeklyFrequency  Int             @map("weekly_frequency")
  defaultPlanWeeks Int             @default(4) @map("default_plan_weeks")
  updatedAt        DateTime        @updatedAt @map("updated_at")
  createdAt        DateTime        @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("goal_profiles")
}

