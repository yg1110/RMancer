generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismaClassGenerator {
  provider               = "prisma-class-generator"
  dryRun                 = "false"
  separateRelationFields = "false"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime? @map("email_verified")
  hashedPassword String?   @map("hashed_password")
  image          String?

  accounts Account[]
  sessions Session[]
  inbodies InbodyRecord[]
  profile  GoalProfile?
  routines Routine[]

  @@map("users")

}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model InbodyRecord {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")

  measuredAt       DateTime @map("measured_at")
  heightCm         Float    @map("height_cm")
  weightKg         Float    @map("weight_kg")
  skeletalMuscleKg Float    @map("skeletal_muscle_kg")
  bodyFatKg        Float    @map("body_fat_kg")
  bodyFatPct       Float    @map("body_fat_pct")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, measuredAt])
  @@map("inbody_records")
}

enum GoalType {
  MUSCLE_GAIN
  FAT_LOSS
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model GoalProfile {
  id               String          @id @default(cuid())
  userId           String          @unique @map("user_id")
  goalType         GoalType        @map("goal_type")
  experienceLevel  ExperienceLevel @map("experience_level")
  weeklyFrequency  Int             @map("weekly_frequency")
  defaultPlanWeeks Int             @default(4) @map("default_plan_weeks")
  updatedAt        DateTime        @updatedAt @map("updated_at")
  createdAt        DateTime        @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("goal_profiles")
}

model Routine {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  title           String
  goalType        GoalType        @map("goal_type")
  experienceLevel ExperienceLevel @map("experience_level")
  weeklyFrequency Int             @map("weekly_frequency")
  planWeeks       Int             @map("plan_weeks")
  sourceVersion   String          @map("source_version")
  createdAt       DateTime        @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  days RoutineDay[]

  @@index([userId, createdAt])
  @@map("routines")
}

model RoutineDay {
  id        String @id @default(cuid())

  routineId String @map("routine_id")
  dayIndex  Int    @map("day_index")
  name      String
  routine   Routine          @relation(fields: [routineId], references: [id], onDelete: Cascade)
  exercises RoutineExercise[]
  logs      RoutineLog[]

  @@index([routineId, dayIndex])

  @@map("routine_days")
}

model RoutineExercise {
  id           String @id @default(cuid())

  routineDayId String @map("routine_day_id")
  order        Int
  exerciseKey  String @map("exercise_key")
  displayName  String @map("display_name")
  sets         Int
  repsMin      Int    @map("reps_min")
  repsMax      Int    @map("reps_max")
  restSec      Int    @map("rest_sec")
  rirMin       Int    @map("rir_min")
  rirMax       Int    @map("rir_max")
  memo         String?

  day RoutineDay @relation(fields: [routineDayId], references: [id], onDelete: Cascade)

  @@index([routineDayId, order])
  @@map("routine_exercises")
}

model RoutineLog {
  id           String   @id @default(cuid())
  routineDayId String   @map("routine_day_id")
  date         DateTime
  isCompleted  Boolean  @default(false) @map("is_completed")
  completedAt  DateTime? @map("completed_at")

  day RoutineDay @relation(fields: [routineDayId], references: [id], onDelete: Cascade)

  @@unique([routineDayId, date])
  @@map("routine_logs")
}